<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Posting"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Post_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="top"
        android:hint="Post Name"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/Type_Post"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="top"
        android:hint="Type Post"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_img"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/Post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Type_Post" />

    <Button
        android:id="@+id/img_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="280dp"
        android:text="add_Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_img" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_img"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Post_Name" />

</androidx.constraintlayout.widget.ConstraintLayout>